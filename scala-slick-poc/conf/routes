# Home page
GET     /                                   controllers.Application.index

# Employee APIs
GET     /emp/list                           controllers.EmployeeController.list

POST    /emp/create                        controllers.EmployeeController.create

GET     /emp/edit                           controllers.EmployeeController.edit(empId: Int)

POST    /emp/update                        controllers.EmployeeController.update

GET     /emp/delete                         controllers.EmployeeController.delete(empId: Int)

# Department APIs
GET     /dept/list                           controllers.DepartmentController.list

POST    /dept/create                        controllers.DepartmentController.create

GET     /dept/edit                           controllers.DepartmentController.edit(deptId: Int)

POST    /dept/update                        controllers.DepartmentController.update

GET     /dept/delete                         controllers.DepartmentController.delete(deptId: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
